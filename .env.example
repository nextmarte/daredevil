# Daredevil API - Configurações

# Whisper Configuration
WHISPER_MODEL=medium
MAX_AUDIO_SIZE_MB=100
TEMP_AUDIO_DIR=/tmp/daredevil

# Cache Configuration
ENABLE_CACHE=true

# Django Configuration
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# LLM Post-Processing (Ollama)
# Habilitar pós-processamento com LLM por padrão
USE_LLM_POST_PROCESSING=false

# Modelo LLM a ser usado (via Ollama)
# Opções: qwen3:30b, qwen2.5:7b, qwen2.5:3b, etc
LLM_MODEL=qwen3:30b

# URL do servidor Ollama
OLLAMA_URL=http://localhost:11434/api/generate
